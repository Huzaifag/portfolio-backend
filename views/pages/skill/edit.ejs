<% layout('layouts/layout') -%>

    <% block('header', true) %>
        <% block('sidebar', true) %>
            <div class="max-w-xl mx-auto mt-10 bg-white rounded-lg shadow p-8">
                <h1 class="text-2xl font-bold text-gray-800 mb-6 flex items-center">
                    <i class="fas fa-tools mr-2 text-indigo-600"></i> Edit Skill
                </h1>
                <form action="/skill/<%= skill._id %>" method="POST" class="space-y-6">
                    <div>
                        <label for="name" class="block text-sm font-medium text-gray-700">Name</label>
                        <input type="text" id="name" name="name" value="<%= skill.name %>" required
                            class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" />
                    </div>
                    <div>
                        <label for="image" class="block text-sm font-medium text-gray-700">Image (media URL)</label>
                        <input type="text" id="image" name="image" value="<%= skill.image %>" required placeholder="Click to select from media" readonly class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 cursor-pointer bg-gray-50" onclick="openMediaModal(function(id, url) { document.getElementById('image').value = url; })" />
                    </div>
                    <div>
                        <label for="expertyLevel" class="block text-sm font-medium text-gray-700">Experty Level</label>
                        <select id="expertyLevel" name="expertyLevel" required class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500">
                            <option value="">Select level</option>
                            <option value="beginner" <%= skill.expertyLevel === 'beginner' ? 'selected' : '' %>>Beginner</option>
                            <option value="intermediate" <%= skill.expertyLevel === 'intermediate' ? 'selected' : '' %>>Intermediate</option>
                            <option value="expert" <%= skill.expertyLevel === 'expert' ? 'selected' : '' %>>Expert</option>
                        </select>
                    </div>
                    <%- include('../../partials/media/media_modal') %>
                    <div class="flex justify-end space-x-3">
                        <a href="/skill"
                            class="bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50">Cancel</a>
                        <button type="submit"
                            class="inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                            Update
                        </button>
                    </div>
                </form>
            </div>
