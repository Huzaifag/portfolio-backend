<% layout('layouts/layout') -%>
    <% block('header', true) %>
        <% block('sidebar', true) %>
            <div class="max-w-5xl mx-auto mt-10">
                <div class="flex items-center justify-between mb-6">
                    <h1 class="text-3xl font-bold text-gray-800 flex items-center">
                        <i class="fas fa-certificate mr-2 text-indigo-600"></i> Certifications
                    </h1>
                    <a href="/certifications/new"
                        class="bg-indigo-600 text-white px-4 py-2 rounded shadow hover:bg-indigo-700">Add
                        Certification</a>
                </div>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <% certifications.forEach(cert=> { %>
                        <div class="bg-white rounded-lg shadow p-6 border border-gray-200 flex flex-col gap-2">
                            <div class="flex items-center gap-3 mb-2">
                                <span class="text-2xl">
                                    <%= cert.icon %>
                                </span>
                                <span class="font-bold text-lg text-gray-800">
                                    <%= cert.title %>
                                </span>
                            </div>
                            <div class="text-gray-600 text-sm mb-2">
                                <%= cert.type %>
                            </div>
                            <div class="text-gray-500 text-sm mb-2">
                                <%= cert.description %>
                            </div>
                            <% if (cert.media && cert.media.url) { %>
                                <img src="<%= cert.media.url %>" alt="Certificate Media"
                                    class="w-24 h-24 object-cover rounded border border-gray-300 mb-2" />
                                <% } %>
                                    <div class="flex gap-2 mt-auto">
                                        <a href="/certifications/<%= cert._id %>"
                                            class="text-indigo-600 hover:underline text-sm">View</a>
                                        <a href="/certifications/<%= cert._id %>/edit"
                                            class="text-yellow-600 hover:underline text-sm">Edit</a>
                                        <form action="/certifications/<%= cert._id %>/delete" method="POST"
                                            style="display:inline">
                                            <button type="submit" class="text-red-600 hover:underline text-sm"
                                                onclick="return confirm('Delete this certification?')">Delete</button>
                                        </form>
                                    </div>
                        </div>
                        <% }) %>
                            <% if (!certifications.length) { %>
                                <div class="col-span-full text-center text-gray-400">No certifications found.</div>
                                <% } %>
                </div>
            </div>