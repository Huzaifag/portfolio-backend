<% layout('layouts/layout') -%>

    <% block('header', true) %>
        <% block('sidebar', true) %>
            <div class="max-w-xl mx-auto mt-10 bg-white rounded-lg shadow p-8">
                <div class="flex items-center mb-6">
                    <img class="h-24 w-24 rounded-full object-cover border-4 border-indigo-500 mr-6"
                        src="<%= info.profileImage || 'https://placehold.co/100x100/333333/FFFFFF?text=Profile' %>"
                        alt="Profile">
                    <div>
                        <h1 class="text-2xl font-bold text-gray-800 mb-1 flex items-center">
                            <i class="fas fa-user mr-2 text-indigo-600"></i>
                            <%= info.name %>
                        </h1>
                        <p class="text-indigo-600 font-semibold mb-2">
                            <%= info.title %>
                        </p>
                        <p class="text-gray-700 mb-2">
                            <%= info.summary %>
                        </p>
                    </div>
                </div>
                <div class="mb-4">
                    <h2 class="text-lg font-semibold text-gray-700 mb-2">Skills</h2>
                    <% if (info.skills && info.skills.length) { %>
                        <div class="flex flex-wrap gap-2">
                            <% info.skills.forEach(skill=> { %>
                                <span
                                    class="inline-block bg-indigo-100 text-indigo-700 px-2 py-1 rounded text-xs font-medium">
                                    <%= skill.name %>: <%= skill.value %>%
                                </span>
                                <% }) %>
                        </div>
                        <% } else { %>
                            <span class="text-gray-400">None</span>
                            <% } %>
                </div>
                <div class="flex justify-end space-x-3 mt-6">
                    <a href="/personal-info"
                        class="bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50">Back
                        to List</a>
                    <a href="/personal-info/<%= info._id %>/edit"
                        class="inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-yellow-600 hover:bg-yellow-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-yellow-500">Edit</a>
                </div>
            </div>