  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap');

    body {
      font-family: 'Poppins', sans-serif;
      background-color: #f8fafc;
    }

    .component-container {
      border: 1px dashed #cbd5e1;
      border-radius: 0.5rem;
      padding: 1.5rem;
      margin-bottom: 2rem;
    }

    .component-title {
      color: #64748b;
      font-weight: 600;
      margin-bottom: 1rem;
      display: flex;
      align-items: center;
    }

    .animate-pop-in {
      animation: popIn 0.6s cubic-bezier(0.22, 1, 0.36, 1) forwards;
    }

    @keyframes popIn {
      0% {
        opacity: 0;
        transform: scale(0.9);
      }

      100% {
        opacity: 1;
        transform: scale(1);
      }
    }

    .circular-chart {
      display: block;
      max-width: 100%;
      max-height: 100%;
    }

    .circle-bg {
      fill: none;
      stroke: #eee;
      stroke-width: 3;
    }

    .circle-fill {
      fill: none;
      stroke-width: 3;
      stroke-linecap: round;
      stroke: #8b5cf6;
      animation: circle-fill-animation 1.5s ease-in-out;
    }

    .percentage {
      fill: #666;
      font-size: 0.5em;
      text-anchor: middle;
    }

    @keyframes circle-fill-animation {
      0% {
        stroke-dasharray: 0, 100;
      }
    }
  </style>
</head>

