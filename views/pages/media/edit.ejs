<% layout('layouts/layout') -%>
<% block('header', true) %>
<% block('sidebar', true) %>

<div class="max-w-4xl mx-auto mt-8 px-6">
  <!-- Header -->
  <div class="flex items-center justify-between mb-8">
    <div>
      <h1 class="text-3xl font-bold text-gray-900 flex items-center">
        <i class="fas fa-edit mr-4 text-indigo-600"></i>
        Edit Media
      </h1>
      <p class="text-gray-600 mt-2">Update media information and settings</p>
    </div>
    <div class="flex space-x-3">
      <a href="/media/<%= media._id %>" class="btn-secondary">
        <i class="fas fa-eye mr-2"></i>
        View Media
      </a>
      <a href="/media<%= media.folder ? '/folder/' + media.folder._id : '' %>" class="btn-outline">
        <i class="fas fa-arrow-left mr-2"></i>
        Back to Library
      </a>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
    <!-- Media Preview -->
    <div class="lg:col-span-1">
      <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 sticky top-8">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">Preview</h3>
        
        <div class="aspect-square bg-gray-100 rounded-lg overflow-hidden mb-4">
          <% if (media.type === 'image') { %>
            <img src="<%= media.url %>" alt="<%= media.title %>" class="w-full h-full object-cover">
          <% } else if (media.type === 'video') { %>
            <video controls class="w-full h-full">
              <source src="<%= media.url %>" type="<%= media.mimeType %>">
              Your browser does not support the video tag.
            </video>
          <% } else if (media.type === 'audio') { %>
            <div class="w-full h-full flex items-center justify-center">
              <div class="text-center">
                <i class="fas fa-music text-4xl text-gray-400 mb-4"></i>
                <audio controls class="w-full">
                  <source src="<%= media.url %>" type="<%= media.mimeType %>">
                  Your browser does not support the audio tag.
                </audio>
              </div>
            </div>
          <% } else { %>
            <div class="w-full h-full flex items-center justify-center">
              <div class="text-center">
                <i class="fas fa-file-alt text-4xl text-gray-400 mb-2"></i>
                <p class="text-sm text-gray-500 capitalize"><%= media.type %></p>
              </div>
            </div>
          <% } %>
        </div>

        <!-- File Info -->
        <div class="space-y-3 text-sm">
          <div class="flex justify-between">
            <span class="text-gray-500">File Size:</span>
            <span class="font-medium"><%= formatFileSize(media.fileSize || 0) %></span>
          </div>
          <div class="flex justify-between">
            <span class="text-gray-500">Type:</span>
            <span class="font-medium capitalize"><%= media.type %></span>
          </div>
          <div class="flex justify-between">
            <span class="text-gray-500">Format:</span>
            <span class="font-medium"><%= media.mimeType || 'Unknown' %></span>
          </div>
          <div class="flex justify-between">
            <span class="text-gray-500">Uploaded:</span>
            <span class="font-medium"><%= media.uploadedAt.toLocaleDateString() %></span>
          </div>
          <% if (media.downloadCount > 0) { %>
            <div class="flex justify-between">
              <span class="text-gray-500">Downloads:</span>
              <span class="font-medium"><%= media.downloadCount %></span>
            </div>
          <% } %>
        </div>

        <!-- Quick Actions -->
        <div class="mt-6 pt-6 border-t border-gray-200">
          <div class="flex space-x-2">
            <a href="<%= media.url %>" target="_blank" class="flex-1 btn-sm btn-outline text-center">
              <i class="fas fa-download mr-1"></i>
              Download
            </a>
            <button onclick="copyToClipboard('<%= media.url %>')" class="flex-1 btn-sm btn-outline">
              <i class="fas fa-copy mr-1"></i>
              Copy URL
            </button>
          </div>
        </div>
      </div>
    </div>

    <!-- Edit Form -->
    <div class="lg:col-span-2">
      <form action="/media/<%= media._id %>" method="POST" class="bg-white rounded-xl shadow-sm border border-gray-200 p-8">
        <div class="space-y-6">
          <!-- Basic Information -->
          <div>
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Basic Information</h3>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <!-- Title -->
              <div class="md:col-span-2">
                <label for="title" class="block text-sm font-medium text-gray-700 mb-2">
                  <i class="fas fa-heading mr-2"></i>
                  Title *
                </label>
                <input type="text" 
                       id="title" 
                       name="title" 
                       value="<%= media.title %>" 
                       required 
                       class="block w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" />
              </div>

              <!-- Type -->
              <div>
                <label for="type" class="block text-sm font-medium text-gray-700 mb-2">
                  <i class="fas fa-tag mr-2"></i>
                  File Type *
                </label>
                <select id="type" name="type" required class="block w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500">
                  <option value="image" <%= media.type === 'image' ? 'selected' : '' %>>Image</option>
                  <option value="video" <%= media.type === 'video' ? 'selected' : '' %>>Video</option>
                  <option value="audio" <%= media.type === 'audio' ? 'selected' : '' %>>Audio</option>
                  <option value="document" <%= media.type === 'document' ? 'selected' : '' %>>Document</option>
                  <option value="resume" <%= media.type === 'resume' ? 'selected' : '' %>>Resume</option>
                  <option value="other" <%= media.type === 'other' ? 'selected' : '' %>>Other</option>
                </select>
              </div>

              <!-- Folder -->
              <div>
                <label for="folder" class="block text-sm font-medium text-gray-700 mb-2">
                  <i class="fas fa-folder mr-2"></i>
                  Folder
                </label>
                <select id="folder" name="folder" class="block w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500">
                  <option value="">Root Directory</option>
                  <% if (typeof allFolders !== 'undefined' && allFolders) { %>
                    <% allFolders.forEach(folder => { %>
                      <option value="<%= folder._id %>" <%= (media.folder && media.folder._id === folder._id.toString()) ? 'selected' : '' %>>
                        <%= folder.name %>
                      </option>
                    <% }) %>
                  <% } %>
                </select>
              </div>
            </div>
          </div>

          <!-- Description -->
          <div>
            <label for="description" class="block text-sm font-medium text-gray-700 mb-2">
              <i class="fas fa-align-left mr-2"></i>
              Description
            </label>
            <textarea id="description" 
                      name="description" 
                      rows="4" 
                      placeholder="Add a description for this media file..."
                      class="block w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 resize-none"><%= media.description || '' %></textarea>
          </div>

          <!-- Tags -->
          <div>
            <label for="tags" class="block text-sm font-medium text-gray-700 mb-2">
              <i class="fas fa-tags mr-2"></i>
              Tags
            </label>
            <input type="text" 
                   id="tags" 
                   name="tags" 
                   value="<%= media.tags ? media.tags.join(', ') : '' %>"
                   placeholder="Enter tags separated by commas"
                   class="block w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" />
            <p class="text-xs text-gray-500 mt-1">Example: portfolio, design, web development</p>
          </div>

          <!-- Settings -->
          <div>
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Settings</h3>
            
            <div class="space-y-4">
              <!-- Public/Private -->
              <div class="flex items-center">
                <input type="checkbox" 
                       id="isPublic" 
                       name="isPublic" 
                       <%= media.isPublic ? 'checked' : '' %>
                       class="h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded">
                <label for="isPublic" class="ml-3 block text-sm text-gray-700">
                  <i class="fas fa-globe mr-2"></i>
                  Make this file publicly accessible
                </label>
              </div>
              <p class="text-xs text-gray-500 ml-7">Public files can be accessed without authentication</p>
            </div>
          </div>

          <!-- Metadata (Read-only) -->
          <div>
            <h3 class="text-lg font-semibold text-gray-900 mb-4">File Information</h3>
            
            <div class="bg-gray-50 rounded-lg p-4 space-y-3">
              <div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-sm">
                <div>
                  <span class="text-gray-500">Original Name:</span>
                  <span class="font-medium ml-2"><%= media.originalName || 'Unknown' %></span>
                </div>
                <div>
                  <span class="text-gray-500">File Size:</span>
                  <span class="font-medium ml-2"><%= formatFileSize(media.fileSize || 0) %></span>
                </div>
                <div>
                  <span class="text-gray-500">MIME Type:</span>
                  <span class="font-medium ml-2"><%= media.mimeType || 'Unknown' %></span>
                </div>
                <div>
                  <span class="text-gray-500">Upload Date:</span>
                  <span class="font-medium ml-2"><%= media.uploadedAt.toLocaleDateString() %></span>
                </div>
                <% if (media.updatedAt && media.updatedAt.getTime() !== media.uploadedAt.getTime()) { %>
                  <div>
                    <span class="text-gray-500">Last Modified:</span>
                    <span class="font-medium ml-2"><%= media.updatedAt.toLocaleDateString() %></span>
                  </div>
                <% } %>
                <% if (media.uploadedBy) { %>
                  <div>
                    <span class="text-gray-500">Uploaded By:</span>
                    <span class="font-medium ml-2"><%= media.uploadedBy.username || 'Unknown' %></span>
                  </div>
                <% } %>
              </div>
            </div>
          </div>
        </div>

        <!-- Form Actions -->
        <div class="flex justify-between items-center mt-8 pt-6 border-t border-gray-200">
          <button type="button" 
                  onclick="deleteMedia('<%= media._id %>')"
                  class="px-4 py-2 text-sm font-medium text-red-600 bg-red-50 border border-red-200 rounded-lg hover:bg-red-100 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition-colors">
            <i class="fas fa-trash mr-2"></i>
            Delete Media
          </button>
          
          <div class="flex space-x-4">
            <a href="/media/<%= media._id %>" 
               class="px-6 py-3 border border-gray-300 rounded-lg text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors">
              Cancel
            </a>
            <button type="submit" 
                    class="px-6 py-3 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors">
              <i class="fas fa-save mr-2"></i>
              Save Changes
            </button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<script>
function copyToClipboard(text) {
  navigator.clipboard.writeText(window.location.origin + text).then(() => {
    showNotification('URL copied to clipboard!', 'success');
  }).catch(() => {
    showNotification('Failed to copy URL', 'error');
  });
}

function deleteMedia(mediaId) {
  if (confirm('Are you sure you want to delete this media file? This action cannot be undone.')) {
    const form = document.createElement('form');
    form.method = 'POST';
    form.action = `/media/${mediaId}/delete`;
    document.body.appendChild(form);
    form.submit();
  }
}

function showNotification(message, type = 'info') {
  const notification = document.createElement('div');
  notification.className = `fixed top-4 right-4 z-50 p-4 rounded-lg shadow-lg max-w-sm ${
    type === 'success' ? 'bg-green-500 text-white' :
    type === 'error' ? 'bg-red-500 text-white' :
    'bg-blue-500 text-white'
  }`;
  
  notification.innerHTML = `
    <div class="flex items-center">
      <i class="fas fa-${type === 'success' ? 'check-circle' : type === 'error' ? 'exclamation-circle' : 'info-circle'} mr-3"></i>
      <span>${message}</span>
    </div>
  `;
  
  document.body.appendChild(notification);
  
  setTimeout(() => {
    notification.remove();
  }, 3000);
}

<%
function formatFileSize(bytes) {
  if (bytes === 0) return '0 Bytes';
  const k = 1024;
  const sizes = ['Bytes', 'KB', 'MB', 'GB'];
  const i = Math.floor(Math.log(bytes) / Math.log(k));
  return parseFloat((bytes / Math.pow(k, i)).toFixed(2)) + ' ' + sizes[i];
}
%>
</script>

<style>
.btn-secondary {
  @apply inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-lg shadow-sm text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors;
}

.btn-outline {
  @apply inline-flex items-center px-4 py-2 border border-indigo-300 text-sm font-medium rounded-lg text-indigo-700 bg-indigo-50 hover:bg-indigo-100 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors;
}

.btn-sm {
  @apply px-3 py-1.5 text-xs font-medium rounded-md;
}
</style>
