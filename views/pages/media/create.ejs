<% layout('layouts/layout') -%>
<% block('header', true) %>
<% block('sidebar', true) %>
<div class="max-w-xl mx-auto mt-10 bg-white rounded-lg shadow p-8">
  <% if (typeof error !== 'undefined' && error) { %>
    <div class="mb-4 p-3 bg-red-100 text-red-700 rounded">Error: <%= error %></div>
  <% } %>
  <% if (typeof success !== 'undefined' && success) { %>
    <div class="mb-4 p-3 bg-green-100 text-green-700 rounded">Media uploaded successfully!</div>
  <% } %>
  <h1 class="text-2xl font-bold text-gray-800 mb-6 flex items-center">
    <i class="fas fa-upload mr-2 text-indigo-600"></i> Upload Media
  </h1>
  <form action="/media" method="POST" enctype="multipart/form-data" class="space-y-6">
    <% if (typeof currentFolder !== 'undefined' && currentFolder && currentFolder._id) { %>
      <input type="hidden" name="folder" value="<%= currentFolder._id %>" />
    <% } %>
    <div>
      <label for="type" class="block text-sm font-medium text-gray-700">Type</label>
      <select id="type" name="type" required class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3">
        <option value="image">Image</option>
        <option value="video">Video</option>
        <option value="audio">Audio</option>
        <option value="document">Document</option>
        <option value="resume">Resume</option>
        <option value="other">Other</option>
      </select>
    </div>
    <div>
      <label for="title" class="block text-sm font-medium text-gray-700">Title</label>
      <input type="text" id="title" name="title" required class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3" />
    </div>
    <div>
      <label for="file" class="block text-sm font-medium text-gray-700">Media File</label>
      <input type="file" id="file" name="file" accept="image/*,video/*,audio/*,.pdf,.doc,.docx,.ppt,.pptx,.xls,.xlsx,.txt" required class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3" />
    </div>
    <div>
      <label for="description" class="block text-sm font-medium text-gray-700">Description</label>
      <textarea id="description" name="description" rows="3" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3"></textarea>
    </div>
    <div>
      <label for="tags" class="block text-sm font-medium text-gray-700">Tags (comma separated)</label>
      <input type="text" id="tags" name="tags" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3" />
    </div>
    <div class="flex justify-end space-x-3">
      <a href="/media" class="bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50">Cancel</a>
      <button type="submit" class="inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700">Upload</button>
    </div>
  </form>
</div>
