<% layout('layouts/layout') -%>
<% block('header', true) %>
<% block('sidebar', true) %>
<div class="max-w-xl mx-auto mt-10 bg-white rounded-lg shadow p-8">
  <h1 class="text-2xl font-bold text-gray-800 mb-6 flex items-center">
    <i class="fas fa-photo-video mr-2 text-indigo-600"></i> <%= media.title %>
  </h1>
  <div class="mb-4">
    <strong>Type:</strong> <%= media.type %><br>
    <strong>Uploaded:</strong> <%= media.uploadedAt.toLocaleDateString() %><br>
    <strong>Description:</strong> <%= media.description %><br>
    <strong>Tags:</strong> <%= media.tags && media.tags.length ? media.tags.join(', ') : 'None' %><br>
    <strong>URL:</strong> <a href="<%= media.url %>" class="text-indigo-600 underline" target="_blank"><%= media.url %></a>
  </div>
  <% if (media.type === 'image') { %>
    <img src="<%= media.url %>" alt="<%= media.title %>" class="w-full rounded shadow mb-4" />
  <% } else if (media.type === 'video') { %>
    <video src="<%= media.url %>" controls class="w-full rounded shadow mb-4"></video>
  <% } else if (media.type === 'audio') { %>
    <audio src="<%= media.url %>" controls class="w-full mb-4"></audio>
  <% } %>
  <div class="flex justify-end space-x-3 mt-6">
    <a href="/media" class="bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50">Back to List</a>
    <a href="/media/<%= media._id %>/edit" class="inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-yellow-600 hover:bg-yellow-700">Edit</a>
  </div>
</div>
