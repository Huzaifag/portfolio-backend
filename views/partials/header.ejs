<!-- Header -->
<header class="bg-white shadow-sm">
    <div class="flex items-center justify-between px-6 py-4">
        <h1 class="text-2xl font-bold text-gray-800"><%= title || 'Dashboard' %></h1>
        <div class="flex items-center space-x-4">
            <button class="p-2 text-gray-500 hover:text-indigo-600 hover:bg-gray-100 rounded-full">
                <i class="fas fa-bell"></i>
            </button>
            <button class="p-2 text-gray-500 hover:text-indigo-600 hover:bg-gray-100 rounded-full">
                <i class="fas fa-envelope"></i>
            </button>
            <div class="relative">
                <input type="text" placeholder="Search..." class="pl-10 pr-4 py-2 border border-gray-300 rounded-full text-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500">
                <i class="fas fa-search absolute left-3 top-2.5 text-gray-400"></i>
            </div>
        </div>
    </div>
</header>
